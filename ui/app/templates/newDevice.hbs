 <div class="modal-header">
  <button type="button" class="close" {{action close target="view"}}>&times;</button>
  <h3>New Device</h3>
</div>
<div class="modal-body">
  <form class="form-horizontal">
    <div class="control-group">
      <label class="control-label" for="hostName">Hostname</label>
      <div class="controls">
        {{view Ember.TextField valueBinding="hostName"}}
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="applicationEntityTitle">AET</label>
      <div class="controls">
        {{view Ember.TextField valueBinding="applicationEntityTitle"}}
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="port">port</label>
      <div class="controls">
        {{textarea valueBinding="port"}}
      </div>
    </div>
  </form>

</div>
<div class="modal-footer">
  <a href="#" class="btn" {{action close target="view"}}>Close</a>
  <a href="#" class="btn btn-primary" {{action save}}>Save changes</a>
</div>