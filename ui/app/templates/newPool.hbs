 <div class="modal-header">
  <button type="button" class="close" {{action close target="view"}}>&times;</button>
  {{#if poolKey}}
    <h3>Edit Pool</h3>
  {{else}}
    <h3>New Pool</h3>
  {{/if}}  
</div>
<div class="modal-body">
  <form class="form-horizontal">
    <div class="control-group">
      <label class="control-label" for="name">Name</label>
      <div class="controls">
        {{view Ember.TextField valueBinding="name" placeholder="Descriptive name"}}
      </div>
    </div>
    <div class="control-group">
        {{#if poolKey}}
        Application Entity Title: <b>{{applicationEntityTitle}}</b>
        {{else}}
      <label class="control-label" for="applicationEntityTitle">AET</label>
      <div class="controls">
        {{view Ember.TextField valueBinding="applicationEntityTitle" placeholder="title"}}
      </div>
        {{/if}}
    </div>
    <div class="control-group">
      <label class="control-label" for="accuracy">Description</label>
      <div class="controls">
        {{textarea valueBinding="description" placeholder="Brief description"}}
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="accuracy">Use Anonymizer</label>
      <div class="controls">
        {{input type="checkbox" valueBinding="anonymize" checked=anonymize}}
      </div>
    </div>
  </form>

</div>
<div class="modal-footer">
  <a href="#" class="btn" {{action close target="view"}}>Close</a>
  <a href="#" class="btn btn-primary" {{action save}}>Save changes</a>
</div>